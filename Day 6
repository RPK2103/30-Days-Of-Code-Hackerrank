#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
#include <string>
using namespace std;


int main() {
    int T;
    cin>>T;
    for(int i=0;i<T;i++)
    {
        string s[T];
        cin>>s[i];
        int n=s[i].length();
        for(int j=0;j<n;j++)
            if(j%2==0)
            cout<<s[i][j];
        cout<<" ";
        for(int j=0;j<n;j++)
            if(j%2!=0)
            cout<<s[i][j];
        cout<<endl;
    }
    return 0;
}
